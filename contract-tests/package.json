{
  "name": "contract-tests",
  "version": "1.0.0",
  "description": "Contract testing for the microservices architecture",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "pact:publish": "pact-broker publish pacts --consumer-app-version=$npm_package_version",
    "pact:verify": "jest --testMatch='**/*.provider.test.ts'",
    "test:contracts": "npm run test && npm run pact:publish"
  },
  "dependencies": {
    "@pact-foundation/pact": "^13.1.5",
    "@pact-foundation/pact-node": "^12.7.0",
    "axios": "^1.10.0",
    "joi": "^17.13.3",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "openapi-schema-validator": "^12.1.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^22.14.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "typescript": "~5.7.2",
    "@apidevtools/swagger-parser": "^10.1.0",
    "openapi-typescript": "^7.4.4"
  }
}
